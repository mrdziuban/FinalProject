<style>
  html { 
  background: url("stick_puck.jpg") no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
</style>

<h1>GameDay</h1>

<section class="sign-up">
  <h3>SIGN UP</h3>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <input type="text" name="user[username]" placeholder="Username" autofocus><br>
    <input type="email" name="user[email]" placeholder="Email"><br>
    <input type="password" name="user[password]" placeholder="Password"><br>
    <input type="password" name="user[password_confirmation]" placeholder="Confirm Password"><br>
    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>
    <input class="red-button" type="submit" value="Sign Up">
  <% end %>
</section>

<section class="sign-links">
  <%= render "devise/shared/links" %>
</section>
